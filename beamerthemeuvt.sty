% fancy graphics
\RequirePackage{tikz}
% handle string keyval options
\RequirePackage{ifthen}

% nicer command definitions
\RequirePackage{xparse}
% used in defining blocks
\RequirePackage{adjustbox}
\RequirePackage{colortbl}

